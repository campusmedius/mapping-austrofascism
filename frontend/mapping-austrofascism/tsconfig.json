{
    "compileOnSave": false,
    "angularCompilerOptions": {
        "enableIvy": false
    },
    "compilerOptions": {
        "baseUrl": "src",
    "downlevelIteration": true,
        "paths": {
            "@app/*": ["app/*"],
            "@env/*": ["environments/*"]
        },
        "outDir": "./dist/out-tsc",
        "sourceMap": true,
        "declaration": false,
        "module": "es2020",
        "moduleResolution": "node",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "importHelpers": true,
        "target": "es2015",
        "typeRoots": [
            "node_modules/@types"
        ],
        "lib": [
            "es2018",
            "dom"
        ]
    }
}
